/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
}
.department{
	width:70%;
	box-sizing:border-box;
	display:flex;
	flex-wrap:wrap;
	margin:30rpx auto;
	justify-content:space-between;

}
.item{
	border:1rpx solid #ef79a1;
	flex-basis:46%;
	box-sizing:border-box;
	padding:10rpx;
	margin:10rpx 0;
	display:flex;
	flex-direction:column;
	justify-content:center;
	align-items:center;
}
.item image{
	width:100rpx;
	height:100rpx;
}


.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  /*overflow: hidden;*/
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 10rpx;
  width: 550rpx;
  
}
.close_modal {
  position: absolute;
  top: -76rpx;
  right: 0;
  width: 46rpx;
  height: 76rpx;
}
.surprise{
	width:100%;
}